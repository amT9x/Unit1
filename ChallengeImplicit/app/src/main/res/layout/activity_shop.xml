<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShopActivity"
    android:background="@color/background_app">

    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        android:layout_margin="10dp"
        android:layout_below="@id/buttonShowItems">
        <TextView
            android:gravity="center"
            android:visibility="invisible"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:id="@+id/itemApple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/text_background"/>
        <TextView
            android:gravity="center"
            android:visibility="invisible"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:id="@+id/itemMango"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/text_background"/>
        <TextView
            android:gravity="center"
            android:visibility="invisible"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:id="@+id/itemBanana"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/text_background"/>
        <TextView
            android:gravity="center"
            android:visibility="invisible"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:id="@+id/itemOrange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/text_background"/>
        <TextView
            android:gravity="center"
            android:visibility="invisible"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:id="@+id/itemEgg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/text_background"/>
        <TextView
            android:gravity="center"
            android:visibility="invisible"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:id="@+id/itemMeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/text_background"/>
        <TextView
            android:gravity="center"
            android:visibility="invisible"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:id="@+id/itemClothes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/text_background"/>
        <TextView
            android:gravity="center"
            android:visibility="invisible"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:id="@+id/itemMelon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/text_background"/>
        <TextView
            android:gravity="center"
            android:visibility="invisible"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:id="@+id/itemLemon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/text_background"/>
        <TextView
            android:gravity="center"
            android:visibility="invisible"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:id="@+id/itemFish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/text_background"/>
    </LinearLayout>
    <Button
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:id="@+id/buttonShowItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_button_activity_items_show"
        android:textColor="@color/text"
        android:background="@color/button_Main"/>
    <Button
        android:id="@+id/buttonReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:background="@color/button_Main"
        android:text="@string/button_return"
        android:textColor="@color/text"/>
</RelativeLayout>