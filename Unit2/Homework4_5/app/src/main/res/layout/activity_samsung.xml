<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Samsung">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textviewSamsung"/>
    <ImageView
        android:layout_below="@id/textviewSamsung"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:src="@drawable/samsung"
        android:id="@+id/imageSamsung"/>
    <TextView
        android:id="@+id/reviewSamsung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageSamsung"
        android:textSize="20dp"
        android:text="@string/review_product"
        android:layout_marginStart="15dp"
        android:textStyle="italic|bold"/>
    <ScrollView
        android:layout_below="@+id/reviewSamsung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/review_samsung"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>